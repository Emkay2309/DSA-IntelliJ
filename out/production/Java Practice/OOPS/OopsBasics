class OopsBasics {
    public static void main(String[] args) {
        //constructor
        Pen p1 = new Pen();
        p1.setColor("Blue");
        System.out.println(p1.color);
    }
}
class Pen {
    //properties + functions
    String color;
    int tip;
    void setColor(String newColor) {
        color = newColor;
    }
    void setTip(int newTip) {
        tip = newTip;
    }
}